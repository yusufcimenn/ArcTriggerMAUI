<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArcTriggerMAUI.MainPage">

    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="#E5E7EB" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="#E5E7EB" />
            <Setter Property="PlaceholderColor" Value="#9CA3AF" />
            <Setter Property="BackgroundColor" Value="#1F2937" />
            <Setter Property="HeightRequest" Value="44" />
            <Setter Property="Margin" Value="0,4,0,4" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="HeightRequest" Value="46" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Ortada kart -->
        <Frame
            WidthRequest="380"
            Padding="24"
            CornerRadius="20"
            BackgroundColor="#111827"
            HasShadow="True"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <VerticalStackLayout Spacing="16">
                <!-- Logo ve başlık -->
                <Image
                    HeightRequest="56"
                    HorizontalOptions="Center">
                    <Image.Source>
                        <FontImageSource Glyph="&#xE77B;" Size="48" Color="#60A5FA" FontFamily="FluentSystemIcons-Resizable" />
                    </Image.Source>
                </Image>

                <Label Text="Welcome back" FontSize="22" HorizontalOptions="Center" />
                <Label Text="Sign in to continue" FontSize="13" Opacity="0.8" HorizontalOptions="Center" />

                <!-- Email -->
                <VerticalStackLayout>
                    <Label Text="Email" FontSize="12" Opacity="0.8" />
                    <Entry x:Name="EmailEntry" Placeholder="name@example.com" Keyboard="Email" />
                </VerticalStackLayout>

                <!-- Password -->
                <VerticalStackLayout>
                    <Label Text="Password" FontSize="12" Opacity="0.8" />
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry x:Name="PasswordEntry" Placeholder="••••••••" IsPassword="True" />
                        <Button
                            Grid.Column="1"
                            x:Name="TogglePwdBtn"
                            Text="Show"
                            Padding="10,0"
                            BackgroundColor="Transparent"
                            TextColor="#60A5FA"
                            />
                    </Grid>
                </VerticalStackLayout>

                <!-- Remember ve Forgot -->
                <Grid ColumnDefinitions="Auto,* ,Auto">
                    <CheckBox x:Name="RememberCheck" VerticalOptions="Center" />
                    <Label Grid.Column="1" Text="Remember me" VerticalOptions="Center" />
                    <Label
                        Grid.Column="2"
                        Text="Forgot password?"
                        TextColor="#60A5FA">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer  />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

                <!-- Login button -->
                <Button
                    x:Name="LoginBtn"
                    Text="Sign in"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    Clicked="OnLoginClicked" />

                <!-- Yükleniyor -->
                <ActivityIndicator
                    x:Name="BusyIndicator"
                    IsVisible="False"
                    IsRunning="False"
                    HeightRequest="24" />

                <!-- Alt link -->
                <Grid ColumnDefinitions="Auto,Auto,Auto" HorizontalOptions="Center">
                    <Label Text="No account?" Opacity="0.8" />
                    <Label Text=" " />
                    <Label Text="Create one" TextColor="#60A5FA">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer  />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
